		<script type="text/javascript" lazy="false"><![CDATA[
		
	/**
	 * 메시지 박스 화면 초기화 작업을 수행한다.
	 */	
	scwin.onpageload = function() {
		try {
			var messageType = scwin.getMessageType();
			var message = $p.getParameter("message") || "메시지 없음";
			tbx_message.setValue(message);
	
			if (messageType === "alert") {
				btn_cancel.hide();
				btn_yes.hide();
			} else if (messageType === "confirm") {
				btn_confirm.hide("");
				btn_yes.show("");
				btn_cancel.show("");
			}
		} catch(ex) {
			console.error(ex);
		}
	};	
	
	scwin.btn_confirm_onclick = function(e) {
		try {
			var popupId = $p.getParameter("popupId");
			scwin.callBackParam = {
				"popupId":popupId,
				"clickValue":false
			};
			if (scwin.getMessageType() == "confirm") {
				scwin.callBackParam.clickValue = true;
			}
			common.win.closePopup(scwin.callBackParam);
		} catch(ex) {
			console.error(ex);
		}
	};
	
	scwin.btn_cancel_onclick = function(e) {
		try {
			var popupId = $p.getParameter("popupId");
			scwin.callBackParam = {
				"popupId":popupId,
				"clickValue":false
			};
			if (scwin.getMessageType() == "confirm") {
				scwin.callBackParam.clickValue = false;
			}
			common.win.closePopup(scwin.callBackParam);
		} catch(ex) {
			console.error(ex);
		}
	};

	scwin.getMessageType = function() {
		var messageType = $p.getParameter("messageType") || "alert";
		return messageType;
	};

	]]></script>
