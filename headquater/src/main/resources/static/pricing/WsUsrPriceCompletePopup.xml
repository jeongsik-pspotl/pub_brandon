    					<w2:textbox tagname="span" style="" id="" label="자세한 결제 내역은" class=""></w2:textbox>
    					<w2:textbox class="" id="" label="매인화면 &gt; 사용자 정보" style="margin-left: 4px;" tagname="strong"></w2:textbox>
    					<w2:textbox class="" id="" label="에서 조회하실 수 있습니다." style="" tagname="span"></w2:textbox>
    				</xf:group>
    				<xf:group class="btnbox" id="" style="">
    					<xf:trigger class="btn_org_line" id="" style="display: none;" type="button">
